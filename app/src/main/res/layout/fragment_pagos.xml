<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.pagosFragment"
    android:background="@color/design_default_color_on_primary"
    android:orientation="vertical"
    android:textColor="?android:attr/textColorPrimary">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccione un grupo"
        android:textAlignment="center"
        android:textSize="35dp"
        android:textColor="@color/black"/>

    <TextView
        android:text="Parece que no hay Grupos"
        android:id="@+id/grupos_vacio"
        android:visibility="gone"
        android:textAlignment="center"
        android:textColor="#504B4B"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"/>

    <ListView
        android:id="@+id/lista_grupos"
        android:layout_width="match_parent"
        android:layout_height="364dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="30dp" />

    <Button
        android:id="@+id/boton_newgrupo"
        android:layout_width="140dp"
        android:layout_height="58dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:text="Crear Grupo" />

</LinearLayout>