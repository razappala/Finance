<?xml version="1.0" encoding="UTF-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
        tools:context=".fragments.Act_total_factura"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        tools:layout_editor_absoluteY="1dp"
        tools:layout_editor_absoluteX="1dp"
        android:orientation="vertical">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Monto total a pagar:"
        android:id="@+id/textView8"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="0000"
        android:id="@+id/monto_factura"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="50dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Monto por cada miembro del grupo:"
        android:id="@+id/textView10"
        android:layout_marginTop="10dp"/>

    <ListView
        android:layout_height="417dp"
        android:layout_width="300dp"
        android:id="@+id/pagos_miembros"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="140dp"
        android:text="Aceptar"
        android:id="@+id/aceptar_factura"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="130dp"
        android:onClick="aceptar"/>

</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>